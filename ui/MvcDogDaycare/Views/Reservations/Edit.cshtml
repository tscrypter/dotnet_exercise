@model MvcDogDaycare.Models.Reservation

@{
    ViewData["Title"] = $"Edit Reservation {Model.Id}";
}

<h1>Edit reservation @Model.Id</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DropOffDttm" class="control-label"></label>
                <input asp-for="DropOffDttm" class="form-control" />
                <span asp-validation-for="DropOffDttm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickUpDttm" class="control-label"></label>
                <input asp-for="PickUpDttm" class="form-control" />
                <span asp-validation-for="PickUpDttm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet" class="control-label"></label>
                <select asp-for="PetId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListOfDogs, "Id", "Name"))">
                </select>
                <span asp-validation-for="Pet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}